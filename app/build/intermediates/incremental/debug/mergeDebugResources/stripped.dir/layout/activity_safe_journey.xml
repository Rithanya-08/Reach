<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#90FFFFFF"
        android:padding="16dp"
        android:elevation="8dp">

        <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/journey_destination_hint"
            android:inputType="textPostalAddress"/>

        <Button
            android:id="@+id/btnStartMonitoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Monitoring"
            android:backgroundTint="@color/purple_700"/>

        <TextView
            android:id="@+id/tvJourneyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not Started"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/tvETS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETA: --"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSosFloating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:backgroundTint="@color/red_sos"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:padding="16dp"/>

</RelativeLayout>
