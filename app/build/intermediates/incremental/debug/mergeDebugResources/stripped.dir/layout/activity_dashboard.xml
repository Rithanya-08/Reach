<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/safety_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back,"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Companion"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- SOS Button (Prominent) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/color_sos">

            <Button
                android:id="@+id/btnSOS"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="SOS"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:letterSpacing="0.1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </androidx.cardview.widget.CardView>

        <!-- Features Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Card 1: Start Journey -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="@color/color_journey"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journey"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <Button
                        android:id="@+id/btnStartJourney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/color_journey"
                        android:layout_marginTop="8dp"
                        android:minHeight="48dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Contacts -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="@color/color_contacts"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <Button
                        android:id="@+id/btnManageContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/color_contacts"
                        android:layout_marginTop="8dp"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Safe Places -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="@color/color_places"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safe Places"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <Button
                        android:id="@+id/btnSafePlaces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/color_places"
                        android:layout_marginTop="8dp"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Fake Call -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="@color/color_fake_call"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fake Call"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <Button
                        android:id="@+id/btnFakeCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trigger"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/color_fake_call"
                        android:layout_marginTop="8dp"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 5: Recordings (NEW) -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_btn_speak_now"
                        app:tint="@color/text_secondary"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recordings"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <Button
                        android:id="@+id/btnRecordings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/text_secondary"
                        android:layout_marginTop="8dp"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDashboardContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</ScrollView>
